@model Course
@{
    SelectList deptOpt = new SelectList(ViewBag.Departments, "DeptID", "Name");
}
<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span style="color:red" asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="Degree"></label>
    <input asp-for="Degree" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="MinDegreee"></label>
    <input asp-for="MinDegreee" class="form-control" />
    <span style="color:red" asp-validation-for="MinDegreee"></span>
</div>

<div class="form-group">
    <label asp-for="DeptID"></label>
    <select asp-for="DeptID" asp-items="deptOpt" class="form-control">
    </select>
</div>
<br />
