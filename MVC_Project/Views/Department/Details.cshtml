@model Department

@{
    ViewBag.Title = $"{@Model.Name} Department Details";
}

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Manager: @Model.Manager</p>

        <br/>
        <a href="/Departments" class="btn btn-primary">Back to List</a>
    </div>
</div>